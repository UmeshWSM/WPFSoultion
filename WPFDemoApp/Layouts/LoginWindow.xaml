<Window x:Class="WPFDemoApp.Layouts.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemoApp.Layouts"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="300">
    <Canvas>
        <TextBlock Canvas.Top="50" Canvas.Left="30">User ID</TextBlock>
        <TextBox Width="70" Canvas.Top="45" Canvas.Left="100"></TextBox>
        <TextBlock Canvas.Top="90" Canvas.Left="30">Password</TextBlock>
        <TextBox Width="70" Canvas.Top="85" Canvas.Left="100"></TextBox>
        <Button Canvas.Top="120" Canvas.Left="70" Template="{StaticResource btnEllipse}">Login</Button>
        <Button Canvas.Top="120" Canvas.Left="130">Cancel</Button>
    </Canvas>
</Window>
