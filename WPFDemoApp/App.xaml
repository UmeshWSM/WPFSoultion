<Application x:Class="WPFDemoApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPFDemoApp"
             StartupUri="Binding/UserDetailsWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <LinearGradientBrush x:Key="ALinearBrush1" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Green" Offset="0"></GradientStop>
                <GradientStop Color="Crimson" Offset="0.25"></GradientStop>
                <GradientStop Color="Green" Offset="0.5"></GradientStop>
                <GradientStop Color="Crimson" Offset="0.75"></GradientStop>
                <GradientStop Color="Green" Offset="1"></GradientStop>
            </LinearGradientBrush>
        <LinearGradientBrush x:Key="ALinearBrush2" StartPoint="0.5,0" EndPoint=".5,1">
            <GradientStop Color="Blue" Offset="0"></GradientStop>
            <GradientStop Color="Crimson" Offset="0.5"></GradientStop>
            <GradientStop Color="Blue" Offset="1"></GradientStop>
        </LinearGradientBrush>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Assets/DemoDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
